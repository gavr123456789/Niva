Test codeBlockStatement -> Unit! = [
  input = """

    [
      sas
    ]

    // typed args
    [ x::Int, y::String ->
      x + y
    ]

    // no args
    [x + y]

    // args
    [a, b -> a + b]

    // empty
    []

    // call expr
    ["sas"] do

    // call with args
    [x::Int, y::Int -> x + y] x: 1 y: 2

    // call with new syntax args
    [x: Int, y: Int -> x + y] x: 1 y: 2
  """ trimIndent
  statements = TestParse withInput: input expectedCount: 8
]




